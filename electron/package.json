{
  "name": "aitrading-agent",
  "version": "1.0.0",
  "description": "AITrading Agent â€“ koppelt MT5 aan www.aitrading.software",
  "main": "main.js",
  "author": "AITrading",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder && npm run copy-to-downloads",
    "build:win": "electron-builder --win && npm run copy-to-downloads",
    "build:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac && npm run copy-to-downloads",
    "build:all": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --win && npm run copy-to-downloads",
    "copy-to-downloads": "node scripts/copy-to-downloads.js"
  },
  "dependencies": {
    "dotenv": "^17.2.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "software.aitrading.agent",
    "productName": "AITrading Agent",
    "directories": { "output": "dist" },
    "files": ["main.js", "preload.js", "dashboard.html"],
    "asar": true,
    "extraResources": [{ "from": "../agent", "to": "agent", "filter": ["**/*.js"] }],
    "win": {
      "target": ["portable", "nsis"]
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.finance",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    }
  }
}
